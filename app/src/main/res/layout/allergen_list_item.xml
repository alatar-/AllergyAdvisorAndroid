<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/allergen_linearlayout"
android:layout_width="match_parent"
android:layout_height="35dp"
android:orientation="horizontal">

<TextView
    android:id="@+id/allergen_textview"
    android:layout_width="0dp"
    android:layout_height="fill_parent"
    android:layout_weight="6"
    android:gravity="center_vertical"
    android:textAppearance="?attr/textAppearanceListItem"
    android:textSize="15sp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="5">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_mood_bad_black_24dp"
            android:tint="@color/red"/>

        <TextView
            android:id="@+id/allergen_textview_contains"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="9.9k"
            android:layout_toRightOf="@+id/imageButton1"
            android:layout_centerVertical="true"
            android:textAppearance="?attr/textAppearanceListItem"
            android:background="@drawable/back"
            android:textSize="13sp"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="5">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_mood_black_18dp"
            android:tint="@color/darkgreen"/>

        <TextView
            android:id="@+id/allergen_textview_not_contains"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="5"
            android:layout_toRightOf="@+id/imageButton2"
            android:textAppearance="?attr/textAppearanceListItem"
            android:background="@drawable/back"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>